{
  "_info_passwd_crypted_hash": "# [md5|sha256|sha512] - [$1|$5|$6]$...",
  "_usage_build": "packer build -var plain_passwd=abcd0123 -var crypted_passwd=$(python -c 'import crypt,getpass ; print(crypt.crypt(getpass.getpass(), \"$6$16CHARACTERSSALT\"))') -only=[qemu-x86_64|virtualbox-iso] template.json",

  "builders": [{
    "type": "qemu",
    "name": "qemu-x86_64",
    "vm_name": "{{user `vm_name`}}",
    "machine_type": "q35",
    "disk_interface": "virtio-scsi",
    "disk_discard": "unmap",
    "disk_detect_zeroes": "unmap",
    "qemuargs": [
      ["-smp", "cpus=2"], ["-m", "size=2048"], ["-boot", "order=cdn,menu=on"],
      ["-name", "{{.Name}}"], ["-device", "virtio-net,netdev=user.0"],
      ["-device", "virtio-scsi"], ["-device", "scsi-hd,drive=drive0"],
      ["-usb"], ["-vga", "none"], ["-device", "qxl-vga,vgamem_mb=64"],
      ["-display", "gtk,show-cursor=on"],
      ["-smbios", "type=0,uefi=on"], ["-bios", "{{user `qemu_x64_firmware`}}"],
      ["-virtfs", "{{user `virtfs_opts`}}"]
    ],

    "boot_wait": "10s",
    "ssh_timeout": "2h45m",
    "ssh_username": "packer",
    "ssh_password": "{{user `plain_passwd`}}",
    "headless": "{{user `headless`}}",
    "disk_size": "{{user `disk_size`}}",
    "http_directory": "init",
    "shutdown_command": "sudo shutdown -hP +3",
    "output_directory": "output-vms/{{user `vm_name`}}",

    "iso_checksum": "file:file://{{user `isos_pardir`}}/pclinuxos/{{user `iso_x64_name`}}.md5sum",
    "iso_url": "",
    "iso_urls": "file://{{user `isos_pardir`}}/pclinuxos/{{user `iso_x64_name`}}.iso,{{user `iso_url_mirror`}}/{{user `iso_url_directory`}}/{{user `iso_x64_name`}}.iso",
    "boot_command": [
      "<wait>c<wait>linux /isolinux/vmlinuz livecd=livecd root=/dev/rd/3 {{user `boot_cmdln_options`}}<enter>initrd /isolinux/initrd.gz<enter>boot<enter>",
      "<wait><wait10><wait10><wait10><wait10><wait10><wait10><wait10><wait10><wait10><wait10><wait10><wait10><wait10><wait10><wait10><wait10><wait10><wait10><wait10><wait10><wait10><wait10><wait10><wait10><wait10><wait10><wait10><wait10><wait10><wait10><enter>guest<enter><enter><wait10>su<enter><wait10>apt-get update ; apt-get install -y netcat gdisk efibootmgr lvm2 ; apt-get -y --fix-broken install ; modprobe dm-mod ; vgscan ; vgchange -ay ; lvs ; ",
      "cd /tmp ; wget -O /tmp/disk_setup.sh 'http://{{.HTTPIP}}:{{.HTTPPort}}/common/disk_setup_vmlinux.sh' ; wget -O /tmp/install.sh 'http://{{.HTTPIP}}:{{.HTTPPort}}/{{user `variant`}}/{{user `vol_mgr`}}-install.sh' ; sh -x /tmp/disk_setup.sh part_format_vmdisk sgdisk {{user `vol_mgr`}} ; sh -x /tmp/disk_setup.sh mount_filesystems ; sh -x /tmp/install.sh {{user `init_hostname`}} '{{user `plain_passwd`}}'<enter><wait>"
    ]
  },
  {
    "type": "virtualbox-iso",
    "guest_os_type": "Mandriva_64",
    "format": "ova",
    "vm_name": "{{user `vm_name`}}",
    "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
    "guest_additions_mode": "disable",
    "hard_drive_interface": "sata",
    "iso_interface": "sata",
    "vboxmanage": [
      ["storagectl", "{{.Name}}", "--name", "SCSI Controller", "--add", "scsi",
        "--bootable", "on"],
      ["modifyvm", "{{.Name}}", "--firmware", "efi", "--nictype1", "virtio",
        "--memory", "2048", "--vram", "64", "--rtcuseutc", "on", "--cpus", "2",
        "--clipboard", "bidirectional", "--draganddrop", "bidirectional",
        "--accelerate3d", "on", "--groups", "/init_vm"],
      ["sharedfolder", "add", "{{.Name}}", "--name", "9p_Data0", "--hostpath",
        "/mnt/Data0", "--automount"]
    ],

    "boot_wait": "10s",
    "ssh_timeout": "2h45m",
    "ssh_username": "packer",
    "ssh_password": "{{user `plain_passwd`}}",
    "headless": "{{user `headless`}}",
    "disk_size": "{{user `disk_size`}}",
    "http_directory": "init",
    "shutdown_command": "sudo shutdown -hP +3",
    "output_directory": "output-vms/{{user `vm_name`}}",

    "iso_checksum": "file:file://{{user `isos_pardir`}}/pclinuxos/{{user `iso_x64_name`}}.md5sum",
    "iso_url": "",
    "iso_urls": "file://{{user `isos_pardir`}}/pclinuxos/{{user `iso_x64_name`}}.iso,{{user `iso_url_mirror`}}/{{user `iso_url_directory`}}/{{user `iso_x64_name`}}.iso",
    "boot_command": [
      "<wait>c<wait>linux /isolinux/vmlinuz livecd=livecd root=/dev/rd/3 {{user `boot_cmdln_options`}}<enter>initrd /isolinux/initrd.gz<enter>boot<enter>",
      "<wait><wait10><wait10><wait10><wait10><wait10><wait10><wait10><wait10><wait10><wait10><wait10><wait10><wait10><wait10><wait10><wait10><wait10><wait10><wait10><wait10><wait10><wait10><wait10><wait10><wait10><wait10><wait10><wait10><wait10><wait10><enter>guest<enter><enter><wait10>su<enter><wait10>apt-get update ; apt-get install -y netcat gdisk efibootmgr lvm2 ; apt-get -y --fix-broken install ; modprobe dm-mod ; vgscan ; vgchange -ay ; lvs ; ",
      "cd /tmp ; wget -O /tmp/disk_setup.sh 'http://{{.HTTPIP}}:{{.HTTPPort}}/common/disk_setup_vmlinux.sh' ; wget -O /tmp/install.sh 'http://{{.HTTPIP}}:{{.HTTPPort}}/{{user `variant`}}/{{user `vol_mgr`}}-install.sh' ; sh -x /tmp/disk_setup.sh part_format_vmdisk sgdisk {{user `vol_mgr`}} ; sh -x /tmp/disk_setup.sh mount_filesystems ; sh -x /tmp/install.sh {{user `init_hostname`}} '{{user `plain_passwd`}}'<enter><wait>"
    ]
  }],

  "provisioners": [{
    "type": "shell-local",
    "inline": [
      "mkdir -p {{user `home`}}/.ssh/publish_krls {{user `home`}}/.pki/publish_crls",
      "cp -R {{user `home`}}/.ssh/publish_krls init/common/skel/_ssh/",
      "cp -R {{user `home`}}/.pki/publish_crls init/common/skel/_pki/",
      "tar -cf /tmp/scripts.tar init/common init/{{user `variant`}} -C scripts {{user `variant`}}",
      "if command -v erb > /dev/null ; then",
      "erb author={{user `author`}} guest={{user `vm_name`}} datestamp={{user `datestamp`}} init/common/catalog.json.erb > output-vms/{{user `vm_name`}}/{{user `vm_name`}}_catalog.json",
      "elif command -v pystache > /dev/null ; then",
      "pystache init/common/catalog.json.mustache '{\"author\":\"{{user `author`}}\",\"guest\":\"{{user `vm_name`}}\",\"datestamp\":\"{{user `datestamp`}}\"}' > output-vms/{{user `vm_name`}}/{{user `vm_name`}}_catalog.json",
      "fi"
    ]
  },
  {
    "type": "file",
    "source": "/tmp/scripts.tar",
    "destination": "/tmp/scripts.tar",
    "generated": true
  },
  {
    "type": "shell",
    "environment_vars": [
      "HOME_DIR=/home/packer"
    ],
    "execute_command": "env {{.Vars}} sudo sh -x '{{.Path}}'",
    "inline": [
      "tar -xf /tmp/scripts.tar -C /tmp ; mv /tmp/{{user `variant`}} /tmp/scripts",
      "cp -R /tmp/init /tmp/scripts /root/"
    ]
  },
  {
    "type": "shell",
    "environment_vars": [
      "HOME_DIR=/home/packer"
    ],
    "execute_command": "env {{.Vars}} sudo -E sh -eux '{{.Path}}'",
    "scripts": [
      "init/{{user `variant`}}/vagrantuser.sh"
    ],
    "except": []
  },
  {
    "type": "shell",
    "environment_vars": [
      "HOME_DIR=/home/packer"
    ],
    "execute_command": "env {{.Vars}} sudo -E sh -eux '{{.Path}}'",
    "scripts": [
      "init/common/linux/zerofill.sh"
    ],
    "only": ["virtualbox-iso"]
  }],

  "post-processors": [
    {
      "type": "checksum",
      "checksum_types": ["md5", "sha256"],
      "output": "output-vms/{{user `vm_name`}}/{{user `vm_name`}}.{{.BuilderType}}.{{.ChecksumType}}"
    },
    {
      "type": "vagrant",
      "keep_input_artifact": true,
      "vagrantfile_template": "Vagrantfile.template",
      "include": ["init/common/info.json", "init/common/qemu_lxc/vmrun.sh",
        "init/common/qemu_lxc/vmrun_qemu_x86_64.args",
        "init/common/qemu_lxc/vmrun_bhyve.args", "{{user `qemu_x64_firmware`}}"],
      "output": "output-vms/{{user `vm_name`}}/{{user `vm_name`}}-{{user `datestamp`}}.{{.Provider}}.box",
      "only": ["qemu-x86_64"]
    },
    {
      "type": "shell-local",
      "inline": [
        "mv output-vms/{{user `vm_name`}}/{{user `vm_name`}} output-vms/{{user `vm_name`}}/{{user `vm_name`}}.qcow2"
      ],
      "except": ["virtualbox-iso"]
    }
  ],

  "variables": {
    "variant": "pclinuxos",
    "distro": "pclinuxos",
    "vol_mgr": "lvm",
    "vm_name": "{{user `distro`}}-x86_64-{{user `vol_mgr`}}",
    "init_hostname": "pclinuxos-boxv0000",
    "boot_cmdln_options": "nokmsboot noacpi 3 text textmode=1 nomodeset video=1024x768 keyb=us ",
    "virtfs_opts": "local,id=fsdev0,path=/mnt/Data0,mount_tag=9p_Data0,security_model=passthrough",
    "isos_pardir": "/mnt/Data0/distros",

    "qemu_x64_firmware": "/usr/share/OVMF/OVMF_CODE.fd",
    "iso_url_mirror": "https://spout.ussg.indiana.edu/pclinuxos",
    "iso_url_directory": "pclinuxos/live-cd/64bit",
    "iso_x64_name": "pclinuxos64-kde-darkstar-2021.08",

    "disk_size": "30720",
    "headless": "",
    "plain_passwd": null,
    "crypted_passwd": null,
    "build_timestamp": "{{isotime \"20160912153000\"}}",
    "author": "thebridge0491",
    "datestamp": "{{isotime \"2006.01.02\"}}",
    "home": "{{env `HOME`}}"
  }
}
