{
  "_info_passwd_crypted_hash": "# [md5|sha256|sha512] - [$1|$5|$6]$...",
  "_usage_build": "(export mypass=$(python -c 'import getpass ; print(getpass.getpass())') ; packer build -var plain_passwd=${mypass} -var crypted_passwd=$(python -c 'import os,crypt ; print(crypt.crypt(os.getenv(\"mypass\"), \"$6$16CHARACTERSSALT\"))') -only=[qemu_x86_64|qemu_aarch64|virtualbox-iso] template.json)",

  "builders": [{
    "type": "qemu",
    "name": "qemu_x86_64",
    "vm_name": "{{user `variant`}}-x86_64-{{user `vol_mgr`}}",
    "machine_type": "q35",
    "disk_interface": "virtio-scsi",
    "disk_discard": "unmap",
    "disk_detect_zeroes": "unmap",
    "qemuargs": [
      ["-smp", "cpus=2"], ["-m", "size=2048"], ["-boot", "order=cdn,menu=on"],
      ["-name", "{{.Name}}"], ["-device", "virtio-net,netdev=user.0"],
      ["-device", "virtio-scsi"], ["-device", "scsi-hd,drive=drive0"],
      ["-usb"], ["-vga", "none"], ["-device", "qxl-vga,vgamem_mb=64"],
      ["-display", "gtk,show-cursor=on"],
      ["-smbios", "type=0,uefi=on"], ["-bios", "{{user `qemu_x64_firmware`}}"],
      ["-virtfs", "{{user `virtfs_opts`}}"]
    ],

    "boot_wait": "10s",
    "ssh_timeout": "2h45m",
    "ssh_username": "packer",
    "ssh_password": "{{user `plain_passwd`}}",
    "headless": "{{user `headless`}}",
    "disk_size": "{{user `disk_size`}}",
    "http_directory": "init",
    "shutdown_command": "sudo shutdown -hP +3 || sudo poweroff",
    "output_directory": "output-vms/{{user `variant`}}-x86_64-{{user `vol_mgr`}}",

    "iso_checksum": "file:file://{{user `isos_pardir`}}/alpine/{{user `iso_x64_name`}}.iso.sha256",
    "iso_url": "",
    "iso_urls": "file://{{user `isos_pardir`}}/alpine/{{user `iso_x64_name`}}.iso,{{user `iso_url_mirror`}}/{{user `iso_url_directory`}}/x86_64/{{user `iso_x64_name`}}.iso",
    "boot_command": [
      "<wait10>root<enter><wait>ifconfig eth0 up ; udhcpc -i eth0<enter><wait10>",
      "<wait10><wait10><wait10><wait10><wait10><wait10>",
      "date +%Y.%m.%d-%H:%M -s '{{user `datestamp`}}-23:59' ; wget -O /tmp/disk_setup.sh 'http://{{.HTTPIP}}:{{.HTTPPort}}/common/disk_setup_vmlinux.sh' ; wget -O /tmp/install.sh 'http://{{.HTTPIP}}:{{.HTTPPort}}/{{user `variant`}}/{{user `vol_mgr`}}-install.sh' ; . /etc/os-release ; echo http://{{user `repo_host`}}/v$(cat /etc/alpine-release | cut -d. -f1-2)/main >> /etc/apk/repositories ; echo http://{{user `repo_host`}}/v$(cat /etc/alpine-release | cut -d. -f1-2)/community >> /etc/apk/repositories ; apk update ; apk add e2fsprogs xfsprogs dosfstools sgdisk libffi gnupg curl lvm2 btrfs-progs util-linux multipath-tools perl {{user `foreign_pkgmgr`}} ; ",
      "if [ 'zfs' = '{{user `vol_mgr`}}' ] ; then apk add zfs ; sleep 5 ; fi ; ",
      "setup-udev ; sleep 3 ; env MKFS_CMD={{user `mkfs_cmd`}} sh -x /tmp/disk_setup.sh part_format sgdisk {{user `vol_mgr`}} ; sh -x /tmp/disk_setup.sh mount_filesystems {{user `vol_mgr`}}<enter><wait10><wait10><wait10>env RELEASE={{user `RELEASE`}} sh -x /tmp/install.sh {{user `init_hostname`}} '{{user `crypted_passwd`}}'<enter><wait>"
    ]
  },
  {
    "type": "qemu",
    "name": "qemu_aarch64",
    "vm_name": "{{user `variant`}}-aarch64-{{user `vol_mgr`}}",
    "machine_type": "virt",
    "disk_interface": "virtio",
    "disk_discard": "unmap",
    "disk_detect_zeroes": "unmap",
    "qemuargs": [
      ["-cpu", "cortex-a57"], ["-machine", "virt,gic-version=3,acpi=off"],
      ["-smp", "cpus=2"], ["-m", "size=2048"], ["-boot", "order=cdn,menu=on"],
      ["-name", "{{.Name}}"], ["-device", "virtio-net,netdev=user.0"],
      ["-device", "qemu-xhci,id=usb"], ["-usb"],
      ["-device", "usb-kbd"], ["-device", "usb-tablet"],
      ["-vga", "none"], ["-device", "virtio-gpu-pci"],
      ["-display", "gtk,show-cursor=on"],
      ["-smbios", "type=0,uefi=on"], ["-bios", "{{user `qemu_aa64_firmware`}}"],
      ["-virtfs", "{{user `virtfs_opts`}}"]
    ],
    "qemu_binary": "qemu-system-aarch64",

    "boot_wait": "10s",
    "ssh_timeout": "4h45m",
    "ssh_username": "packer",
    "ssh_password": "{{user `plain_passwd`}}",
    "headless": "{{user `headless`}}",
    "disk_size": "{{user `disk_size`}}",
    "http_directory": "init",
    "shutdown_command": "sudo shutdown -hP +3 || sudo poweroff",
    "output_directory": "output-vms/{{user `variant`}}-aarch64-{{user `vol_mgr`}}",

    "iso_checksum": "file:file://{{user `isos_pardir`}}/alpine/{{user `iso_aa64_name`}}.iso.sha256",
    "iso_url": "",
    "iso_urls": "file://{{user `isos_pardir`}}/alpine/{{user `iso_aa64_name`}}.iso,{{user `iso_url_mirror`}}/{{user `iso_url_directory`}}/aarch64/{{user `iso_aa64_name`}}.iso",
    "boot_command": [
      "<wait10><wait10><wait10><wait10><wait10><wait10>",
      "<wait10><wait10><wait10><wait10><wait10><wait10>",
      "<wait10><wait10><wait10><wait10><wait10><wait10>",
      "<wait10><wait10><wait10><wait10><wait10><wait10>",
      "<wait10><wait10><wait10><wait10><wait10><wait10>",
      "<wait10>root<enter><wait>ifconfig eth0 up ; udhcpc -i eth0<enter><wait10>",
      "<wait10><wait10><wait10><wait10><wait10><wait10>",
      "date +%Y.%m.%d-%H:%M -s '{{user `datestamp`}}-23:59' ; wget -O /tmp/disk_setup.sh 'http://{{.HTTPIP}}:{{.HTTPPort}}/common/disk_setup_vmlinux.sh' ; wget -O /tmp/install.sh 'http://{{.HTTPIP}}:{{.HTTPPort}}/{{user `variant`}}/{{user `vol_mgr`}}-install.sh' ; . /etc/os-release ; echo http://{{user `repo_host`}}/v$(cat /etc/alpine-release | cut -d. -f1-2)/main >> /etc/apk/repositories ; echo http://{{user `repo_host`}}/v$(cat /etc/alpine-release | cut -d. -f1-2)/community >> /etc/apk/repositories ; apk update ; apk add e2fsprogs xfsprogs dosfstools sgdisk libffi gnupg curl lvm2 btrfs-progs util-linux multipath-tools perl {{user `foreign_pkgmgr`}} ; ",
      "if [ 'zfs' = '{{user `vol_mgr`}}' ] ; then apk add zfs ; sleep 5 ; fi ; ",
      "setup-udev ; sleep 3 ; env MKFS_CMD={{user `mkfs_cmd`}} sh -x /tmp/disk_setup.sh part_format sgdisk {{user `vol_mgr`}} ; sh -x /tmp/disk_setup.sh mount_filesystems {{user `vol_mgr`}}<enter><wait10><wait10><wait10>env RELEASE={{user `RELEASE`}} sh -x /tmp/install.sh {{user `init_hostname`}} '{{user `crypted_passwd`}}'<enter><wait>"
    ]
  },
  {
    "type": "virtualbox-iso",
    "guest_os_type": "Linux26_64",
    "format": "ova",
    "vm_name": "{{user `variant`}}-x86_64-{{user `vol_mgr`}}",
    "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
    "guest_additions_mode": "disable",
    "hard_drive_interface": "sata",
    "iso_interface": "sata",
    "vboxmanage": [
      ["storagectl", "{{.Name}}", "--name", "SCSI Controller", "--add", "scsi",
        "--bootable", "on"],
      ["modifyvm", "{{.Name}}", "--firmware", "efi", "--nictype1", "virtio",
        "--memory", "2048", "--vram", "64", "--rtcuseutc", "on", "--cpus", "2",
        "--clipboard", "bidirectional", "--draganddrop", "bidirectional",
        "--accelerate3d", "on", "--groups", "/init_vm"],
      ["sharedfolder", "add", "{{.Name}}", "--name", "9p_Data0", "--hostpath",
        "/mnt/Data0", "--automount"]
    ],

    "boot_wait": "10s",
    "ssh_timeout": "2h45m",
    "ssh_username": "packer",
    "ssh_password": "{{user `plain_passwd`}}",
    "headless": "{{user `headless`}}",
    "disk_size": "{{user `disk_size`}}",
    "http_directory": "init",
    "shutdown_command": "sudo shutdown -hP +3 || sudo poweroff",
    "output_directory": "output-vms/{{user `variant`}}-x86_64-{{user `vol_mgr`}}",

    "iso_checksum": "file:file://{{user `isos_pardir`}}/alpine/{{user `iso_x64_name`}}.iso.sha256",
    "iso_url": "",
    "iso_urls": "file://{{user `isos_pardir`}}/alpine/{{user `iso_x64_name`}}.iso,{{user `iso_url_mirror`}}/{{user `iso_url_directory`}}/x86_64/{{user `iso_x64_name`}}.iso",
    "boot_command": [
      "root<enter><wait>ifconfig eth0 up ; udhcpc -i eth0<enter><wait10>",
      "date +%Y.%m.%d-%H:%M -s '{{user `datestamp`}}-23:59' ; wget -O /tmp/answers 'http://{{.HTTPIP}}:{{.HTTPPort}}/{{user `variant`}}/{{user `vol_mgr`}}-answers' ; wget -O /tmp/post_autoinstall.sh 'http://{{.HTTPIP}}:{{.HTTPPort}}/{{user `variant`}}/{{user `vol_mgr`}}-post_autoinstall.sh' ; service sshd stop ; APKREPOSOPTS=http://{{user `repo_host`}}/v$(cat /etc/alpine-release | cut -d. -f1-2)/main BOOT_SIZE=200 USE_EFI=1 setup-alpine -f /tmp/answers<enter><wait5>{{user `plain_passwd`}}<enter>{{user `plain_passwd`}}<enter><wait10><wait10><wait10>y<enter><wait10><wait10><wait10>env RELEASE={{user `RELEASE`}} sh -x /tmp/post_autoinstall.sh '{{user `crypted_passwd`}}'<enter>"
    ]
  }],

  "provisioners": [{
    "type": "shell-local",
    "inline": [
      "mkdir -p {{user `home`}}/.ssh/publish_krls {{user `home`}}/.pki/publish_crls",
      "cp -R {{user `home`}}/.ssh/publish_krls init/common/skel/_ssh/",
      "cp -R {{user `home`}}/.pki/publish_crls init/common/skel/_pki/",
      "tar -cf /tmp/scripts.tar init/common init/{{user `variant`}} -C scripts {{user `variant`}}"
    ]
  },
  {
    "type": "shell-local",
    "inline": [
      "if command -v erb > /dev/null ; then",
      "erb author={{user `author`}} guest={{user `variant`}}-x86_64-{{user `vol_mgr`}} datestamp={{user `build_timestamp`}} init/common/catalog.json.erb > output-vms/{{user `variant`}}-x86_64-{{user `vol_mgr`}}/{{user `variant`}}-x86_64-{{user `vol_mgr`}}_catalog.json",
      "elif command -v pystache > /dev/null ; then",
      "pystache init/common/catalog.json.mustache '{\"author\":\"{{user `author`}}\",\"guest\":\"{{user `variant`}}-x86_64-{{user `vol_mgr`}}\",\"datestamp\":\"{{user `build_timestamp`}}\"}' > output-vms/{{user `variant`}}-x86_64-{{user `vol_mgr`}}/{{user `variant`}}-x86_64-{{user `vol_mgr`}}_catalog.json",
      "fi"
    ],
    "only": ["qemu_x86_64"]
  },
  {
    "type": "shell-local",
    "inline": [
      "if command -v erb > /dev/null ; then",
      "erb author={{user `author`}} guest={{user `variant`}}-aarch64-{{user `vol_mgr`}} datestamp={{user `build_timestamp`}} init/common/catalog.json.erb > output-vms/{{user `variant`}}-aarch64-{{user `vol_mgr`}}/{{user `variant`}}-aarch64-{{user `vol_mgr`}}_catalog.json",
      "elif command -v pystache > /dev/null ; then",
      "pystache init/common/catalog.json.mustache '{\"author\":\"{{user `author`}}\",\"guest\":\"{{user `variant`}}-aarch64-{{user `vol_mgr`}}\",\"datestamp\":\"{{user `build_timestamp`}}\"}' > output-vms/{{user `variant`}}-aarch64-{{user `vol_mgr`}}/{{user `variant`}}-aarch64-{{user `vol_mgr`}}_catalog.json",
      "fi"
    ],
    "only": ["qemu_aarch64"]
  },
  {
    "type": "file",
    "source": "/tmp/scripts.tar",
    "destination": "/tmp/scripts.tar",
    "generated": true
  },
  {
    "type": "shell",
    "environment_vars": [
      "HOME_DIR=/home/packer"
    ],
    "execute_command": "env {{.Vars}} sudo sh -x '{{.Path}}'",
    "inline": [
      "tar -xf /tmp/scripts.tar -C /tmp ; mv /tmp/{{user `variant`}} /tmp/scripts",
      "cp -R /tmp/init /tmp/scripts /root/"
    ]
  },
  {
    "type": "shell",
    "environment_vars": [
      "HOME_DIR=/home/packer"
    ],
    "execute_command": "env {{.Vars}} sudo -E sh -eux '{{.Path}}'",
    "scripts": [
      "init/{{user `variant`}}/vagrantuser.sh"
    ],
    "except": []
  },
  {
    "type": "shell",
    "environment_vars": [
      "HOME_DIR=/home/packer"
    ],
    "execute_command": "env {{.Vars}} sudo -E sh -eux '{{.Path}}'",
    "scripts": [
      "init/common/linux/zerofill.sh"
    ],
    "only": ["virtualbox-iso"]
  }],

  "post-processors": [
    {
      "type": "checksum",
      "checksum_types": ["md5", "sha256"],
      "output": "output-vms/{{user `variant`}}-x86_64-{{user `vol_mgr`}}/{{user `variant`}}-x86_64-{{user `vol_mgr`}}.{{.BuilderType}}.{{.ChecksumType}}",
      "only": ["qemu_x86_64"]
    },
    {
      "type": "vagrant",
      "keep_input_artifact": true,
      "vagrantfile_template": "Vagrantfile.template",
      "include": ["init/common/info.json", "init/common/qemu_lxc/vmrun.sh",
        "init/common/qemu_lxc/vmrun_qemu_x86_64.args",
        "init/common/qemu_lxc/vmrun_bhyve.args", "{{user `qemu_x64_firmware`}}"],
      "output": "output-vms/{{user `variant`}}-x86_64-{{user `vol_mgr`}}/{{user `variant`}}-x86_64-{{user `vol_mgr`}}-{{user `build_timestamp`}}.{{.Provider}}.box",
      "only": ["qemu_x86_64"]
    },
    {
      "type": "shell-local",
      "inline": [
        "mv output-vms/{{user `variant`}}-x86_64-{{user `vol_mgr`}}/{{user `variant`}}-x86_64-{{user `vol_mgr`}} output-vms/{{user `variant`}}-x86_64-{{user `vol_mgr`}}/{{user `variant`}}-x86_64-{{user `vol_mgr`}}.qcow2",
        "cp init/common/qemu_lxc/vmrun.sh output-vms/{{user `variant`}}-x86_64-{{user `vol_mgr`}}/"
      ],
      "only": ["qemu_x86_64"]
    },
    {
      "type": "checksum",
      "checksum_types": ["md5", "sha256"],
      "output": "output-vms/{{user `variant`}}-aarch64-{{user `vol_mgr`}}/{{user `variant`}}-aarch64-{{user `vol_mgr`}}.{{.BuilderType}}.{{.ChecksumType}}",
      "only": ["qemu_aarch64"]
    },
    {
      "type": "vagrant",
      "keep_input_artifact": true,
      "vagrantfile_template": "Vagrantfile.template",
      "include": ["init/common/info.json", "init/common/qemu_lxc/vmrun.sh",
        "init/common/qemu_lxc/vmrun_qemu_aarch64.args", "{{user `qemu_aa64_firmware`}}"],
      "output": "output-vms/{{user `variant`}}-aarch64-{{user `vol_mgr`}}/{{user `variant`}}-aarch64-{{user `vol_mgr`}}-{{user `build_timestamp`}}.{{.Provider}}.box",
      "only": ["qemu_aarch64"]
    },
    {
      "type": "shell-local",
      "inline": [
        "mv output-vms/{{user `variant`}}-aarch64-{{user `vol_mgr`}}/{{user `variant`}}-aarch64-{{user `vol_mgr`}} output-vms/{{user `variant`}}-aarch64-{{user `vol_mgr`}}/{{user `variant`}}-aarch64-{{user `vol_mgr`}}.qcow2",
        "cp init/common/qemu_lxc/vmrun.sh output-vms/{{user `variant`}}-aarch64-{{user `vol_mgr`}}/"
      ],
      "only": ["qemu_aarch64"]
    }
  ],

  "variables": {
    "variant": "alpine",
    "vol_mgr": "std",
    "mkfs_cmd": "mkfs.ext4",
    "init_hostname": "{{user `variant`}}-boxv0000",
    "foreign_pkgmgr": "xbps debootstrap pacman",
    "boot_cmdln_options": " ",
    "virtfs_opts": "local,id=fsdev0,path=/mnt/Data0,mount_tag=9p_Data0,security_model=passthrough",
    "isos_pardir": "/mnt/Data0/distros",
    "RELEASE": "",

    "repo_host": "dl-cdn.alpinelinux.org/alpine",
    "iso_url_mirror": "https://dl-cdn.alpinelinux.org/alpine",
    "iso_url_directory": "latest-stable/releases",
    "iso_x64_name": "alpine-extended-3.14.2-x86_64",
    "qemu_x64_firmware": "/usr/share/OVMF/OVMF_CODE.fd",

    "iso_aa64_name": "alpine-standard-3.14.2-aarch64",
    "qemu_aa64_firmware": "/usr/share/AAVMF/AAVMF_CODE.fd",

    "disk_size": "30720",
    "headless": "",
    "plain_passwd": "abcd0123",
    "crypted_passwd": "$6$16CHARACTERSSALT$o/XwaDmfuxBWVf1nEaH34MYX8YwFlAMo66n1.L3wvwdalv0IaV2b/ajr7xNcX/RFIPvfBNj.2Qxeh7v4JTjJ91",
    "build_timestamp": "{{isotime `2006.01`}}",
    "author": "thebridge0491",
    "datestamp": "{{isotime `2006.01.02`}}",
    "home": "{{env `HOME`}}"
  }
}
