{
  "_info_passwd_crypted_hash": "# [md5|sha256|sha512] - [$1|$5|$6]$...",
  "_usage_build": "packer build -var plain_passwd=abcd0123 -var crypted_passwd=$(python -c 'import crypt,getpass ; print(crypt.crypt(getpass.getpass(), \"$6$16CHARACTERSSALT\"))') -only=[qemu-x86_64|qemu-aarch64|virtualbox-iso] template.json",

  "builders": [{
    "type": "qemu",
    "name": "qemu-x86_64",
    "vm_name": "{{user `vm_name`}}",
    "machine_type": "pc",
    "disk_interface": "virtio-scsi",
    "disk_discard": "unmap",
    "disk_detect_zeroes": "unmap",
    "qemuargs": [
      ["-smp", "cpus=2"], ["-m", "size=2048"], ["-boot", "order=cdn,menu=on"],
      ["-name", "{{.Name}}"], ["-device", "virtio-net,netdev=user.0"],
      ["-device", "virtio-scsi"], ["-device", "scsi-hd,drive=drive0"],
      ["-usb"], ["-vga", "cirrus"],
      ["-display", "gtk,show-cursor=on"],
      ["-smbios", "type=0,uefi=on"], ["-bios", "{{user `qemu_x64_firmware`}}"]
    ],

    "boot_wait": "10s",
    "ssh_timeout": "2h45m",
    "ssh_username": "root",
    "ssh_password": "{{user `plain_passwd`}}",
    "headless": "{{user `headless`}}",
    "disk_size": "{{user `disk_size`}}",
    "http_directory": "init",
    "shutdown_command": "shutdown -p +3",
    "output_directory": "output-vms/{{user `vm_name`}}",

    "disk_image": "true",
    "iso_checksum": "file:file://{{user `isos_pardir`}}/openbsd/amd64/SHA256",
    "iso_url": "",
    "iso_urls": "file://{{user `isos_pardir`}}/openbsd/amd64/{{user `iso_x64_name`}}.img,{{user `iso_url_mirror`}}/{{user `iso_x64_url_directory`}}/{{user `iso_x64_name`}}.img",
    "boot_command": [
      "<wait10><wait10><wait10><wait10><wait10><wait10>",
      "S<enter><wait10>dhclient vio0<enter><wait>",
      "ftp -o /tmp/custom.disklabel http://{{.HTTPIP}}:{{.HTTPPort}}/{{user `variant`}}/custom.disklabel ; ftp -o /tmp/install.conf http://{{.HTTPIP}}:{{.HTTPPort}}/{{user `variant`}}/install.conf ; ftp -o /tmp/autoinstall.sh http://{{.HTTPIP}}:{{.HTTPPort}}/{{user `variant`}}/autoinstall.sh ; sync ; sleep 3 ; sh -x /tmp/autoinstall.sh<enter>"
    ]
  },
  {
    "type": "qemu",
    "name": "qemu-aarch64",
    "vm_name": "{{user `vm_name`}}",
    "machine_type": "virt",
    "disk_interface": "virtio",
    "disk_discard": "unmap",
    "disk_detect_zeroes": "unmap",
    "qemuargs": [
      ["-cpu", "cortex-a57"], ["-machine", "virt,gic-version=3,acpi=off"],
      ["-smp", "cpus=2"], ["-m", "size=2048"], ["-boot", "order=cdn,menu=on"],
      ["-name", "{{.Name}}"], ["-device", "virtio-net,netdev=user.0"],
      ["-device", "qemu-xhci,id=usb"], ["-usb"],
      ["-device", "usb-kbd"], ["-device", "usb-tablet"],
      ["-vga", "none"], ["-device", "virtio-gpu-pci"],
      ["-display", "gtk,show-cursor=on"],
      ["-smbios", "type=0,uefi=on"], ["-bios", "{{user `qemu_aa64_firmware`}}"]
    ],
    "qemu_binary": "qemu-system-aarch64",

    "boot_wait": "10s",
    "ssh_timeout": "2h45m",
    "ssh_username": "root",
    "ssh_password": "{{user `plain_passwd`}}",
    "headless": "{{user `headless`}}",
    "disk_size": "{{user `disk_size`}}",
    "http_directory": "init",
    "shutdown_command": "shutdown -p +3",
    "output_directory": "output-vms/{{user `vm_name`}}",

    "disk_image": "true",
    "iso_checksum": "file:file://{{user `isos_pardir`}}/openbsd/arm64/SHA256",
    "iso_url": "",
    "iso_urls": "file://{{user `isos_pardir`}}/openbsd/arm64/{{user `iso_aa64_name`}}.img,{{user `iso_url_mirror`}}/{{user `iso_aa64_url_directory`}}/{{user `iso_aa64_name`}}.img",
    "boot_command": [
      "<wait10><wait10><wait10><wait10><wait10><wait10>",
      "<wait10><wait10><wait10><wait10><wait10><wait10>",
      "S<enter><wait10>dhclient vio0<enter><wait>",
      "ftp -o /tmp/custom.disklabel http://{{.HTTPIP}}:{{.HTTPPort}}/{{user `variant`}}/custom.disklabel ; ftp -o /tmp/install.conf http://{{.HTTPIP}}:{{.HTTPPort}}/{{user `variant`}}/install.conf ; ftp -o /tmp/autoinstall.sh http://{{.HTTPIP}}:{{.HTTPPort}}/{{user `variant`}}/autoinstall.sh ; sync ; sleep 3 ; sh -x /tmp/autoinstall.sh<enter>"
    ]
  },
  {
    "type": "virtualbox-iso",
    "guest_os_type": "OpenBSD_64",
    "format": "ova",
    "vm_name": "{{user `vm_name`}}",
    "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
    "guest_additions_mode": "disable",
    "hard_drive_interface": "sata",
    "iso_interface": "sata",
    "vboxmanage": [
      ["storagectl", "{{.Name}}", "--name", "SCSI Controller", "--add", "scsi",
        "--bootable", "on"],
      ["modifyvm", "{{.Name}}", "--firmware", "bios", "--nictype1", "virtio",
        "--memory", "2048", "--vram", "64", "--rtcuseutc", "on", "--cpus", "2",
        "--clipboard", "bidirectional", "--draganddrop", "bidirectional",
        "--accelerate3d", "on", "--groups", "/init_vm"]
    ],

    "boot_wait": "10s",
    "ssh_timeout": "2h45m",
    "ssh_username": "root",
    "ssh_password": "{{user `plain_passwd`}}",
    "headless": "{{user `headless`}}",
    "disk_size": "{{user `disk_size`}}",
    "http_directory": "init",
    "shutdown_command": "shutdown -p +3",
    "output_directory": "output-vms/{{user `vm_name`}}",

    "iso_checksum": "file:file://{{user `isos_pardir`}}/openbsd/amd64/SHA256",
    "iso_url": "",
    "iso_urls": "file://{{user `isos_pardir`}}/openbsd/amd64/{{user `iso_x64_name`}}.iso,{{user `iso_url_mirror`}}/{{user `iso_x64_url_directory`}}/{{user `iso_x64_name`}}.iso",
    "boot_command": [
      "<wait10><wait10><wait10><wait10><wait10><wait10>",
      "S<enter><wait10>",
      "mount_mfs -s 100m md1 /tmp ; mount_mfs -s 100m md2 /mnt ; mount -t mfs -s 100m md1 /tmp ; mount -t mfs -s 100m md2 /mnt ; dhclient -L /tmp/dhclient.lease.em0 em0 ; dhclient -L /tmp/dhclient.lease.vio0 vio0 ; cd /tmp ; ftp -o /tmp/custom.disklabel http://{{.HTTPIP}}:{{.HTTPPort}}/{{user `variant`}}/custom.disklabel ; ftp -o /tmp/disk_setup.sh http://{{.HTTPIP}}:{{.HTTPPort}}/{{user `variant`}}/disklabel_setup_vmopenbsd.sh ; ftp -o /tmp/install.sh http://{{.HTTPIP}}:{{.HTTPPort}}/{{user `variant`}}/{{user `vol_mgr`}}-install.sh ; (cd /dev ; sh MAKEDEV sd0) ; sh -x /tmp/disk_setup.sh part_format_vmdisk {{user `vol_mgr`}} ; sh -x /tmp/disk_setup.sh mount_filesystems ; sh -x /tmp/install.sh {{user `init_hostname`}} '{{user `plain_passwd`}}'<enter><wait>"
    ]
  }],

  "provisioners": [{
    "type": "shell-local",
    "inline": [
      "mkdir -p {{user `home`}}/.ssh/publish_krls {{user `home`}}/.pki/publish_crls",
      "cp -R {{user `home`}}/.ssh/publish_krls init/common/skel/_ssh/",
      "cp -R {{user `home`}}/.pki/publish_crls init/common/skel/_pki/",
      "tar -cf /tmp/scripts.tar init/common init/{{user `variant`}} -C scripts {{user `variant`}}",
      "if command -v erb > /dev/null ; then",
      "erb author={{user `author`}} guest={{user `vm_name`}} datestamp={{user `datestamp`}} init/common/catalog.json.erb > output-vms/{{user `vm_name`}}/{{user `vm_name`}}_catalog.json",
      "elif command -v pystache > /dev/null ; then",
      "pystache init/common/catalog.json.mustache '{\"author\":\"{{user `author`}}\",\"guest\":\"{{user `vm_name`}}\",\"datestamp\":\"{{user `datestamp`}}\"}' > output-vms/{{user `vm_name`}}/{{user `vm_name`}}_catalog.json",
      "fi"
    ]
  },
  {
    "type": "file",
    "source": "/tmp/scripts.tar",
    "destination": "/tmp/scripts.tar",
    "generated": true
  },
  {
    "type": "shell",
    "environment_vars": [
      "HOME_DIR=/home/packer"
    ],
    "execute_command": "chmod +x {{.Path}} ; env {{.Vars}} sh -c {{.Path}}",
    "inline": [
      "tar -xf /tmp/scripts.tar -C /tmp ; mv /tmp/{{user `variant`}} /tmp/scripts",
      "cp -R /tmp/init /tmp/scripts /root/"
    ]
  },
  {
    "type": "shell",
    "environment_vars": [
      "HOME_DIR=/home/packer"
    ],
    "execute_command": "chmod +x {{.Path}} ; env {{.Vars}} sh -c {{.Path}}",
    "scripts": [
      "init/{{user `variant`}}/vagrantuser.sh"
    ],
    "except": []
  },
  {
    "type": "shell",
    "environment_vars": [
      "HOME_DIR=/home/packer"
    ],
    "execute_command": "chmod +x {{.Path}} ; env {{.Vars}} sh -c {{.Path}}",
    "scripts": [
      "init/common/bsd/zerofill.sh"
    ],
    "only": ["virtualbox-iso"]
  }],

  "post-processors": [
    {
      "type": "checksum",
      "checksum_types": ["md5", "sha256"],
      "output": "output-vms/{{user `vm_name`}}/{{user `vm_name`}}.{{.BuilderType}}.{{.ChecksumType}}"
    },
    {
      "type": "vagrant",
      "keep_input_artifact": true,
      "vagrantfile_template": "Vagrantfile.template",
      "include": ["init/common/info.json", "init/common/qemu_lxc/vmrun.sh",
        "init/common/qemu_lxc/vmrun_qemu_x86_64.args",
        "init/common/qemu_lxc/vmrun_bhyve.args", "{{user `qemu_x64_firmware`}}"],
      "output": "output-vms/{{user `vm_name`}}/{{user `vm_name`}}-{{user `datestamp`}}.{{.Provider}}.box",
      "only": ["qemu-x86_64"]
    },
    {
      "type": "vagrant",
      "keep_input_artifact": true,
      "vagrantfile_template": "Vagrantfile.template",
      "include": ["init/common/info.json", "init/common/qemu_lxc/vmrun.sh",
        "init/common/qemu_lxc/vmrun_qemu_aarch64.args", "{{user `qemu_aa64_firmware`}}"],
      "output": "output-vms/{{user `vm_name`}}/{{user `vm_name`}}-{{user `datestamp`}}.{{.Provider}}.box",
      "only": ["qemu-aarch64"]
    },
    {
      "type": "shell-local",
      "inline": [
        "mv output-vms/{{user `vm_name`}}/{{user `vm_name`}} output-vms/{{user `vm_name`}}/{{user `vm_name`}}.qcow2"
      ],
      "except": ["virtualbox-iso"]
    }
  ],

  "variables": {
    "variant": "openbsd",
    "distro": "openbsd",
    "vol_mgr": "std",
    "vm_name": "{{user `distro`}}-x86_64-{{user `vol_mgr`}}",
    "init_hostname": "openbsd-boxv0000",
    "boot_cmdln_options": " ",
    "isos_pardir": "/mnt/Data0/distros",

    "qemu_x64_firmware": "/usr/share/OVMF/OVMF_CODE.fd",
    "iso_url_mirror": "https://cdn.openbsd.org/pub/OpenBSD",
    "iso_x64_url_directory": "6.9/amd64",
    "iso_x64_name": "install69",

    "qemu_aa64_firmware": "/usr/share/AAVMF/AAVMF_CODE.fd",
    "iso_aa64_url_directory": "6.9/arm64",
    "iso_aa64_name": "install69",

    "disk_size": "30720",
    "headless": "",
    "plain_passwd": null,
    "crypted_passwd": null,
    "build_timestamp": "{{isotime \"20160912153000\"}}",
    "author": "thebridge0491",
    "datestamp": "{{isotime \"2006.01.02\"}}",
    "home": "{{env `HOME`}}"
  }
}
