{
  "_info_passwd_crypted_hash": "# [md5|sha256|sha512] - [$1|$5|$6]$...",
  "_usage_build": "(export mypass=$(python -c 'import getpass ; print(getpass.getpass())') ; packer build -var plain_passwd=${mypass} -var crypted_passwd=$(python -c 'import os,crypt ; print(crypt.crypt(os.getenv(\"mypass\"), \"$6$16CHARACTERSSALT\"))') -only=[qemu_x86_64|virtualbox-iso] template.json)",

  "builders": [{
    "type": "qemu",
    "name": "qemu_x86_64",
    "vm_name": "{{user `variant`}}-x86_64-{{user `vol_mgr`}}",
    "machine_type": "q35",
    "disk_interface": "virtio-scsi",
    "disk_discard": "unmap",
    "disk_detect_zeroes": "unmap",
    "qemuargs": [
      ["-smp", "cpus=2"], ["-m", "size=2048"], ["-boot", "order=cdn,menu=on"],
      ["-name", "{{.Name}}"], ["-device", "virtio-net,netdev=user.0"],
      ["-device", "virtio-scsi"], ["-device", "scsi-hd,drive=drive0"],
      ["-usb"], ["-vga", "none"], ["-device", "qxl-vga,vgamem_mb=64"],
      ["-display", "gtk,show-cursor=on"],
      ["-smbios", "type=0,uefi=on"], ["-bios", "{{user `qemu_x64_firmware`}}"],
      ["-virtfs", "{{user `virtfs_opts`}}"]
    ],

    "boot_wait": "10s",
    "ssh_timeout": "2h45m",
    "ssh_username": "packer",
    "ssh_password": "{{user `plain_passwd`}}",
    "headless": "{{user `headless`}}",
    "disk_size": "{{user `disk_size`}}",
    "http_directory": "init",
    "shutdown_command": "sudo shutdown -hP +3",
    "output_directory": "output-vms/{{user `variant`}}-x86_64-{{user `vol_mgr`}}",

    "iso_checksum": "file:file://{{user `isos_pardir`}}/artix/sha256sums",
    "iso_url": "",
    "iso_urls": "file://{{user `isos_pardir`}}/artix/{{user `iso_x64_name`}}.iso,{{user `iso_url_mirror`}}/{{user `iso_url_directory`}}/{{user `iso_x64_name`}}.iso",
    "boot_command": [
      "<wait10><wait10><wait10><wait10><wait10><wait10><wait10><wait10><wait10><wait10><wait10><wait10>artix<enter>artix<enter><wait10>sudo su<enter><wait>mount -o remount,size=1G /run/artix/cowspace ; mount -o remount,size=1G /run/archiso/cowspace ; df -h ; sleep 5 ; pacman -Sy ; sleep 3 ; pacman -Sy --noconfirm gnu-netcat parted glibc dosfstools gptfdisk lvm2 ; sleep 5 ; ",
      "cd /tmp ; curl -o /tmp/disk_setup.sh 'http://{{.HTTPIP}}:{{.HTTPPort}}/common/disk_setup_vmlinux.sh' ; curl -o /tmp/install.sh 'http://{{.HTTPIP}}:{{.HTTPPort}}/{{user `variant`}}/{{user `vol_mgr`}}-install.sh' ; sh -x /tmp/disk_setup.sh part_format_vmdisk sgdisk {{user `vol_mgr`}} ; sh -x /tmp/disk_setup.sh mount_filesystems ; env service_mgr={{user `service_mgr`}} sh -x /tmp/install.sh {{user `init_hostname`}} '{{user `crypted_passwd`}}'<enter><wait>"
    ]
  },
  {
    "type": "virtualbox-iso",
    "guest_os_type": "ArchLinux_64",
    "format": "ova",
    "vm_name": "{{user `variant`}}-x86_64-{{user `vol_mgr`}}",
    "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
    "guest_additions_mode": "disable",
    "hard_drive_interface": "sata",
    "iso_interface": "sata",
    "vboxmanage": [
      ["storagectl", "{{.Name}}", "--name", "SCSI Controller", "--add", "scsi",
        "--bootable", "on"],
      ["modifyvm", "{{.Name}}", "--firmware", "efi", "--nictype1", "virtio",
        "--memory", "2048", "--vram", "64", "--rtcuseutc", "on", "--cpus", "2",
        "--clipboard", "bidirectional", "--draganddrop", "bidirectional",
        "--accelerate3d", "on", "--groups", "/init_vm"],
      ["sharedfolder", "add", "{{.Name}}", "--name", "9p_Data0", "--hostpath",
        "/mnt/Data0", "--automount"]
    ],

    "boot_wait": "10s",
    "ssh_timeout": "2h45m",
    "ssh_username": "packer",
    "ssh_password": "{{user `plain_passwd`}}",
    "headless": "{{user `headless`}}",
    "disk_size": "{{user `disk_size`}}",
    "http_directory": "init",
    "shutdown_command": "sudo shutdown -hP +3",
    "output_directory": "output-vms/{{user `variant`}}-x86_64-{{user `vol_mgr`}}",

    "iso_checksum": "file:file://{{user `isos_pardir`}}/artix/sha256sums",
    "iso_url": "",
    "iso_urls": "file://{{user `isos_pardir`}}/artix/{{user `iso_x64_name`}}.iso,{{user `iso_url_mirror`}}/{{user `iso_url_directory`}}/{{user `iso_x64_name`}}.iso",
    "boot_command": [
      "<wait10><wait10><wait10><wait10><wait10><wait10><wait10><wait10><wait10><wait10><wait10><wait10>artix<enter>artix<enter><wait10>sudo su<enter><wait>mount -o remount,size=1G /run/artix/cowspace ; mount -o remount,size=1G /run/archiso/cowspace ; df -h ; sleep 5 ; pacman -Sy ; sleep 3 ; pacman -Sy --noconfirm gnu-netcat parted glibc dosfstools gptfdisk lvm2 ; sleep 5 ; ",
      "cd /tmp ; curl -o /tmp/disk_setup.sh 'http://{{.HTTPIP}}:{{.HTTPPort}}/common/disk_setup_vmlinux.sh' ; curl -o /tmp/install.sh 'http://{{.HTTPIP}}:{{.HTTPPort}}/{{user `variant`}}/{{user `vol_mgr`}}-install.sh' ; sh -x /tmp/disk_setup.sh part_format_vmdisk sgdisk {{user `vol_mgr`}} ; sh -x /tmp/disk_setup.sh mount_filesystems ; env service_mgr={{user `service_mgr`}} sh -x /tmp/install.sh {{user `init_hostname`}} '{{user `crypted_passwd`}}'<enter><wait>"
    ]
  }],

  "provisioners": [{
    "type": "shell-local",
    "inline": [
      "mkdir -p {{user `home`}}/.ssh/publish_krls {{user `home`}}/.pki/publish_crls",
      "cp -R {{user `home`}}/.ssh/publish_krls init/common/skel/_ssh/",
      "cp -R {{user `home`}}/.pki/publish_crls init/common/skel/_pki/",
      "tar -cf /tmp/scripts.tar init/common init/{{user `variant`}} -C scripts {{user `variant`}}"
    ]
  },
  {
    "type": "shell-local",
    "inline": [
      "if command -v erb > /dev/null ; then",
      "erb author={{user `author`}} guest={{user `variant`}}-x86_64-{{user `vol_mgr`}} datestamp={{user `datestamp`}} init/common/catalog.json.erb > output-vms/{{user `variant`}}-x86_64-{{user `vol_mgr`}}/{{user `variant`}}-x86_64-{{user `vol_mgr`}}_catalog.json",
      "elif command -v pystache > /dev/null ; then",
      "pystache init/common/catalog.json.mustache '{\"author\":\"{{user `author`}}\",\"guest\":\"{{user `variant`}}-x86_64-{{user `vol_mgr`}}\",\"datestamp\":\"{{user `datestamp`}}\"}' > output-vms/{{user `variant`}}-x86_64-{{user `vol_mgr`}}/{{user `variant`}}-x86_64-{{user `vol_mgr`}}_catalog.json",
      "fi"
    ],
    "only": ["qemu_x86_64"]
  },
  {
    "type": "file",
    "source": "/tmp/scripts.tar",
    "destination": "/tmp/scripts.tar",
    "generated": true
  },
  {
    "type": "shell",
    "environment_vars": [
      "HOME_DIR=/home/packer"
    ],
    "execute_command": "env {{.Vars}} sudo sh -x '{{.Path}}'",
    "inline": [
      "tar -xf /tmp/scripts.tar -C /tmp ; mv /tmp/{{user `variant`}} /tmp/scripts",
      "cp -R /tmp/init /tmp/scripts /root/"
    ]
  },
  {
    "type": "shell",
    "environment_vars": [
      "HOME_DIR=/home/packer"
    ],
    "execute_command": "env {{.Vars}} sudo -E sh -eux '{{.Path}}'",
    "scripts": [
      "init/{{user `variant`}}/vagrantuser.sh"
    ],
    "except": []
  },
  {
    "type": "shell",
    "environment_vars": [
      "HOME_DIR=/home/packer"
    ],
    "execute_command": "env {{.Vars}} sudo -E sh -eux '{{.Path}}'",
    "scripts": [
      "init/common/linux/zerofill.sh"
    ],
    "only": ["virtualbox-iso"]
  }],

  "post-processors": [
    {
      "type": "checksum",
      "checksum_types": ["md5", "sha256"],
      "output": "output-vms/{{user `variant`}}-x86_64-{{user `vol_mgr`}}/{{user `variant`}}-x86_64-{{user `vol_mgr`}}.{{.BuilderType}}.{{.ChecksumType}}",
      "only": ["qemu_x86_64"]
    },
    {
      "type": "vagrant",
      "keep_input_artifact": true,
      "vagrantfile_template": "Vagrantfile.template",
      "include": ["init/common/info.json", "init/common/qemu_lxc/vmrun.sh",
        "init/common/qemu_lxc/vmrun_qemu_x86_64.args",
        "init/common/qemu_lxc/vmrun_bhyve.args", "{{user `qemu_x64_firmware`}}"],
      "output": "output-vms/{{user `variant`}}-x86_64-{{user `vol_mgr`}}/{{user `variant`}}-x86_64-{{user `vol_mgr`}}-{{user `datestamp`}}.{{.Provider}}.box",
      "only": ["qemu_x86_64"]
    },
    {
      "type": "shell-local",
      "inline": [
        "mv output-vms/{{user `variant`}}-x86_64-{{user `vol_mgr`}}/{{user `variant`}}-x86_64-{{user `vol_mgr`}} output-vms/{{user `variant`}}-x86_64-{{user `vol_mgr`}}/{{user `variant`}}-x86_64-{{user `vol_mgr`}}.qcow2",
        "cp init/common/qemu_lxc/vmrun.sh output-vms/{{user `variant`}}-x86_64-{{user `vol_mgr`}}/"
      ],
      "only": ["qemu_x86_64"]
    }
  ],

  "variables": {
    "variant": "archlinux",
    "vol_mgr": "lvm",
    "init_hostname": "{{user `variant`}}-boxv0000",
    "service_mgr": "openrc",
    "boot_cmdln_options": " quiet video=1024x768 ",
    "virtfs_opts": "local,id=fsdev0,path=/mnt/Data0,mount_tag=9p_Data0,security_model=passthrough",
    "isos_pardir": "/mnt/Data0/distros",

    "iso_url_mirror": "https://iso.artixlinux.org",
    "iso_url_directory": "artix",
    "iso_x64_name": "artix-base-openrc-20210726-x86_64",
    "qemu_x64_firmware": "/usr/share/OVMF/OVMF_CODE.fd",

    "_iso_url_mirror_archlinux": "https://mirror.math.princeton.edu/pub/archlinux",
    "_iso_url_directory_archlinux": "iso/latest",
    "_iso_x64_name_archlinux": "archlinux-2021.09.01-x86_64",

    "disk_size": "30720",
    "headless": "",
    "plain_passwd": null,
    "crypted_passwd": null,
    "build_timestamp": "{{isotime \"20160912153000\"}}",
    "author": "thebridge0491",
    "datestamp": "{{isotime \"2006.01.02\"}}",
    "home": "{{env `HOME`}}"
  }
}
