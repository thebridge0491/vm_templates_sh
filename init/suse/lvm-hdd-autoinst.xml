  <partitioning config:type="list">
    <drive>
      <!--<device>/dev/[sv]da</device>-->
      <device>ask</device>
      <disklabel>gpt</disklabel>
      <initialize config:type="boolean">false</initialize>
      <partitions config:type="list">
        <partition>
          <partition_type>primary</partition_type>
          <filesystem config:type="symbol">bios_grub</filesystem>
          <format config:type="boolean">false</format>
          <label>bios_boot</label>
          <!--<mount></mount>-->
          <!--<mountby config:type="symbol">uuid</mountby>-->
          <size>1M</size>
        </partition>
        <partition>
          <partition_type>primary</partition_type>
          <filesystem config:type="symbol">vfat</filesystem>
          <format config:type="boolean">false</format>
          <label>ESP</label>
          <mount>/boot/efi</mount>
          <!--<mountby config:type="symbol">uuid</mountby>-->
          <size>200M</size>
        </partition>
        <partition>
          <partition_type>primary</partition_type>
          <filesystem config:type="symbol">ext2</filesystem>
          <format config:type="boolean">false</format>
          <label>vg0-osBoot</label>
          <!--<mount></mount>-->
          <size>1G</size>
        </partition>
        <partition>
          <partition_type>primary</partition_type>
          <format config:type="boolean">false</format>
          <label>pvol0</label>
          <lvm_group>vg0</lvm_group>
          <size>84G</size>
        </partition>
        <partition>
          <partition_type>primary</partition_type>
          <filesystem config:type="symbol">ext2</filesystem>
          <format config:type="boolean">false</format>
          <label>vg1-osBoot</label>
          <mount>/boot</mount>
          <size>1G</size>
        </partition>
        <partition>
          <partition_type>primary</partition_type>
          <format config:type="boolean">false</format>
          <label>pvol1</label>
          <lvm_group>vg1</lvm_group>
          <size>80G</size>
        </partition>
        <partition>
          <partition_type>primary</partition_type>
          <!--<filesystem config:type="symbol">ufs</filesystem>-->
          <format config:type="boolean">false</format>
          <label>bsd0-fsSwap</label>
          <!--<mount></mount>-->
          <size>4G</size>
        </partition>
        <partition>
          <partition_type>primary</partition_type>
          <!--<filesystem config:type="symbol">zfs</filesystem>-->
          <format config:type="boolean">false</format>
          <label>bsd0-fsPool</label>
          <!--<mount></mount>-->
          <size>80G</size>
        </partition>
        <partition>
          <partition_type>primary</partition_type>
          <!--<filesystem config:type="symbol">exfat</filesystem>-->
          <format config:type="boolean">false</format>
          <label>data0</label>
          <!--<mount></mount>-->
          <size>120G</size>
        </partition>
        <partition>
          <partition_type>primary</partition_type>
          <!--<filesystem config:type="symbol">exfat</filesystem>-->
          <format config:type="boolean">false</format>
          <label>data1</label>
          <!--<mount></mount>-->
          <size>max</size> <!--<size>80G</size>-->
        </partition>
      </partitions>
      <use>all</use>
    </drive>
    <drive>
      <device>/dev/vg0</device>
      <is_lvm_vg config:type="boolean">true</is_lvm_vg>
      <initialize config:type="boolean">false</initialize>
      <partitions config:type="list">
        <partition>
          <lv_name>osSwap</lv_name>
          <filesystem config:type="symbol">swap</filesystem>
          <label>vg0-osSwap</label>
          <mount>swap</mount>
          <size>4G</size>
        </partition>
        <partition>
          <lv_name>osRoot</lv_name>
          <filesystem config:type="symbol">ext4</filesystem>
          <label>vg0-osRoot</label>
          <!--<mount></mount>-->
          <size>16G</size>
        </partition>
        <partition>
          <lv_name>osVar</lv_name>
          <filesystem config:type="symbol">ext4</filesystem>
          <label>vg0-osVar</label>
          <!--<mount></mount>-->
          <size>8G</size>
        </partition>
        <partition>
          <!--<crypt>twofish256</crypt>
          <crypt_fs config:type="boolean">true</crypt_fs>
          <loop_fs config:type="boolean">true</loop_fs>
          <crypt_key>vmpacker</crypt_key>-->
          <lv_name>osHome</lv_name>
          <filesystem config:type="symbol">ext4</filesystem>
          <label>vg0-osHome</label>
          <!--<mount></mount>-->
          <size>32G</size>
        </partition>
        <partition>
          <lv_name>free</lv_name>
          <filesystem config:type="symbol">ext4</filesystem>
          <label>vg0-free</label>
          <!--<mount></mount>-->
          <size>max</size>
        </partition>
      </partitions>
      <pesize>4M</pesize>
      <type config:type="symbol">CT_LVM</type>
      <use>all</use>
    </drive>
    <drive>
      <device>/dev/vg1</device>
      <is_lvm_vg config:type="boolean">true</is_lvm_vg>
      <initialize config:type="boolean">false</initialize>
      <partitions config:type="list">
        <partition>
          <lv_name>osRoot</lv_name>
          <filesystem config:type="symbol">ext4</filesystem>
          <label>vg1-osRoot</label>
          <mount>/</mount>
          <size>16G</size>
        </partition>
        <partition>
          <lv_name>osVar</lv_name>
          <filesystem config:type="symbol">ext4</filesystem>
          <label>vg1-osVar</label>
          <mount>/var</mount>
          <size>8G</size>
        </partition>
        <partition>
          <!--<crypt>twofish256</crypt>
          <crypt_fs config:type="boolean">true</crypt_fs>
          <loop_fs config:type="boolean">true</loop_fs>
          <crypt_key>vmpacker</crypt_key>-->
          <lv_name>osHome</lv_name>
          <filesystem config:type="symbol">ext4</filesystem>
          <label>vg1-osHome</label>
          <mount>/home</mount>
          <size>32G</size>
        </partition>
        <partition>
          <lv_name>free</lv_name>
          <filesystem config:type="symbol">ext4</filesystem>
          <label>vg1-free</label>
          <mount>/free</mount>
          <size>max</size>
        </partition>
      </partitions>
      <pesize>4M</pesize>
      <type config:type="symbol">CT_LVM</type>
      <use>all</use>
    </drive>
  </partitioning>
