{
  "_usage_build": "packer build [-var machine=x86_64] [-var variant=freebsd] [-var vm_name=freebsd-x86_64-zfs] [-var author=thebridge0491] [-var datestamp=???] -only=[box-libvirt|box-bhyve] box-vagrant.json",

  "builders": [{
    "type": "null",
    "name": "box-libvirt",
    "communicator": "none"
  },
  {
    "type": "null",
    "name": "box-bhyve",
    "communicator": "none"
  }],
  "provisioners": [{
    "type": "shell-local",
    "inline": [
      "cp -R init/common/metadata_libvirt.json output-vms/{{user `vm_name`}}/metadata.json",
      "if [ 'aarch64' = '{{user `machine`}}'] ; then",
      "cp -R {{user `qemu_aa64_firmware`}} output-vms/{{user `vm_name`}}/",
      "else",
      "cp -R {{user `qemu_x64_firmware`}} output-vms/{{user `vm_name`}}/",
      "fi",
      "cp -R init/common/info.json init/common/qemu_lxc/vmrun* output-vms/{{user `vm_name`}}/",
      "if command -v erb > /dev/null ; then",
      "erb author={{user `author`}} guest={{user `vm_name`}} datestamp={{user `datestamp`}} init/common/catalog.json.erb > output-vms/{{user `vm_name`}}/{{user `vm_name`}}_catalog.json",
      "erb variant={{user `variant`}} init/common/Vagrantfile_libvirt.erb > output-vms/{{user `vm_name`}}/Vagrantfile",
      "elif command -v pystache > /dev/null ; then",
      "pystache init/common/catalog.json.mustache '{\"author\":\"{{user `author`}}\",\"guest\":\"{{user `vm_name`}}\",\"datestamp\":\"{{user `datestamp`}}\"}' > output-vms/{{user `vm_name`}}/{{user `vm_name`}}_catalog.json",
      "pystache init/common/Vagrantfile_libvirt.mustache '{\"variant\":\"{{user `variant`}}\"}' > output-vms/{{user `vm_name`}}/Vagrantfile",
      "fi",
      "cd output-vms/{{user `vm_name`}}",
      "qemu-img convert -f qcow2 -O qcow2 {{user `vm_name`}}.qcow2 box.img",
      "tar -cvzf {{user `vm_name`}}-{{user `datestamp`}}.libvirt.box metadata.json info.json Vagrantfile `ls vmrun* *_CODE.fd` box.img"
    ],
    "only": ["box-libvirt"]
  },
  {
    "type": "shell-local",
    "inline": [
      "cp -R init/common/metadata_bhyve.json output-vms/{{user `vm_name`}}/metadata.json",
      "cp -R init/common/info.json init/common/qemu_lxc/vmrun* {{user `bhyve_x64_firmware`}} output-vms/{{user `vm_name`}}/",
      "if command -v erb > /dev/null ; then",
      "erb author={{user `author`}} guest={{user `vm_name`}} datestamp={{user `datestamp`}} init/common/catalog.json.erb > output-vms/{{user `vm_name`}}/{{user `vm_name`}}_catalog.json",
      "erb variant={{user `variant`}} init/common/Vagrantfile_bhyve.erb > output-vms/{{user `vm_name`}}/Vagrantfile",
      "elif command -v pystache > /dev/null ; then",
      "pystache init/common/catalog.json.mustache '{\"author\":\"{{user `author`}}\",\"guest\":\"{{user `vm_name`}}\",\"datestamp\":\"{{user `datestamp`}}\"}' > output-vms/{{user `vm_name`}}/{{user `vm_name`}}_catalog.json",
      "pystache init/common/Vagrantfile_bhyve.mustache '{\"variant\":\"{{user `variant`}}\"}' > output-vms/{{user `vm_name`}}/Vagrantfile",
      "fi",
      "cd output-vms/{{user `vm_name`}}",
      "mv {{user `vm_name`}}.raw box.img",
      "tar -cvzf {{user `vm_name`}}-{{user `datestamp`}}.bhyve.box metadata.json info.json Vagrantfile `ls vmrun* *_CODE.fd` box.img"
    ],
    "only": ["box-bhyve"]
  }],
  "variables": {
    "machine": "x86_64",
    "variant": "freebsd",
    "vm_name": "freebsd-x86_64-zfs",
    "author": "thebridge0491",
    "bhyve_x64_firmware": "/usr/local/share/uefi-firmware/BHYVE_UEFI_CODE.fd",
    "qemu_x64_firmware": "/usr/share/OVMF/OVMF_CODE.fd",
    "qemu_aa64_firmware": "/usr/share/AAVMF/AAVMF_CODE.fd",
    "datestamp": "{{isotime \"2006.01.02\"}}"
  }
}
